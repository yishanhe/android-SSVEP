<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="net.yishanhe.ssvep.braininput.BrainInputMainActivity">

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <LinearLayout
                android:orientation="vertical"
                android:background="@color/Black"
                android:layout_width="360px"
                android:layout_height="360px"
                android:id="@+id/topLeft" >

                <view
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="50px"
                    class="net.yishanhe.ssvep.braininput.FlickeringView"
                    android:id="@+id/topLeftView" />
            </LinearLayout>

            <LinearLayout
                android:background="@color/Black"
                android:layout_width="360px"
                android:layout_height="360px"
                android:id="@+id/topRight">

                <view
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="50px"
                    class="net.yishanhe.ssvep.braininput.FlickeringView"
                    android:id="@+id/topRightView" />
            </LinearLayout>
        </TableRow>
        <TableRow>
            <LinearLayout
                android:background="@color/Black"
                android:layout_width="360px"
                android:layout_height="360px"
                android:id="@+id/bottomLeft">

                <view
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="50px"
                    class="net.yishanhe.ssvep.braininput.FlickeringView"
                    android:id="@+id/bottomLeftView" />
            </LinearLayout>
            <LinearLayout
                android:background="@color/Black"
                android:layout_width="360px"
                android:layout_height="360px"
                android:id="@+id/bottomRight">

                <view
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="50px"
                    class="net.yishanhe.ssvep.braininput.FlickeringView"
                    android:id="@+id/bottomRightView" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="200px">
        <Button
            android:id="@+id/control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start" />

    </LinearLayout>


</LinearLayout>
