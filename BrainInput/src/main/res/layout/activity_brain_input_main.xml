    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="342dp"
        android:layout_weight="1.01">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@color/Red"
            android:id="@+id/middlerect">

            <view
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                class="net.yishanhe.ssvep.braininput.FlickeringViewInner"
                bi:initialColor="@color/White"
                android:id="@+id/view"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:background="@color/White"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_alignBottom="@+id/middlerect"
            android:layout_toLeftOf="@+id/middlerect"
            android:id="@+id/leftuprect">

            <view
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                class="net.yishanhe.ssvep.braininput.FlickeringView"
                android:id="@+id/view2"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:background="@color/White"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_alignTop="@+id/middlerect"
            android:layout_toRightOf="@+id/middlerect"
