            android:id="@+id/rightuprect"
            android:layout_above="@+id/middlerect"
            android:layout_alignLeft="@+id/middlerect">

            <view
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                class="net.yishanhe.ssvep.braininput.FlickeringView"
                android:id="@+id/view4"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
